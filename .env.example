# Aiven MySQL — set these in .env (never commit .env)
DB_HOST=your-aiven-host.aivencloud.com
DB_PORT=23432
DB_USER=avnadmin
DB_PASSWORD=your-aiven-password
DB_NAME=defaultdb
DB_SSL=REQUIRED

# OMDB API — get key at http://www.omdbapi.com/
OMDB_API_KEY=your-omdb-api-key

# Twilio for SMS OTP (get from twilio.com)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Dev: set to true to log OTP in console instead of sending SMS
OTP_DEV_MODE=true
